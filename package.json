{
  "name": "react-use-ref-effect",
  "description": "an useEffect hook optimized for useRef",
  "version": "1.3.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "sideEffects": false,
  "scripts": {
    "start": "tsup --watch --config tsup.config.js",
    "build": "tsup --config tsup.config.js",
    "test": "vitest test --environment=happy-dom",
    "lint": "prettier --write 'src/**/*.{ts,tsx}'",
    "size": "size-limit",
    "prepare": "husky install",
    "analyze": "size-limit --why",
    "prepublishOnly": "npm run build && npm test"
  },
  "browserslist": [
    "> 2%",
    "not IE 11"
  ],
  "peerDependencies": {
    "react": ">=16"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": "https://github.com/jantimon/react-use-ref-effect",
  "author": "Jan Nicklas <j.nicklas@me.com>",
  "module": "dist/react-use-ref-effect.esm.js",
  "size-limit": [
    {
      "path": "dist/react-use-ref-effect.cjs.production.min.js",
      "limit": "500 B"
    },
    {
      "path": "dist/react-use-ref-effect.esm.js",
      "limit": "500 B"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "happy-dom": "14.7.1",
    "react": "18.2.0",
    "husky": "9.0.11",
    "react-dom": "18.2.0",
    "size-limit": "7.0.8",
    "prettier": "3.2.5",
    "terser": "5.30.3 ",
    "tsup": "8.0.2",
    "typescript": "5.4.5",
    "vitest": "1.5.0"
  }
}
