{
  "name": "react-use-ref-effect",
  "description": "an useEffect hook optimized for useRef",
  "version": "2.3.0",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "sideEffects": false,
  "scripts": {
    "start": "tsup --watch --config tsup.config.js",
    "build": "tsup --config tsup.config.js",
    "test": "vitest run --environment=happy-dom",
    "lint": "prettier --write 'src/**/*.{ts,tsx}'",
    "size": "size-limit",
    "prepare": "husky install",
    "analyze": "size-limit --why",
    "prepublishOnly": "npm run build && npm test"
  },
  "browserslist": [
    "> 2%",
    "not IE 11"
  ],
  "peerDependencies": {
    "react": ">=19"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": "https://github.com/jantimon/react-use-ref-effect",
  "author": "Jan Nicklas <j.nicklas@me.com>",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "600 B"
    },
    {
      "path": "dist/index.mjs",
      "limit": "500 B"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/react": "19.0.10",
    "@types/react-dom": "18.2.25",
    "happy-dom": "17.1.8",
    "react": "19.0.0",
    "husky": "9.0.11",
    "react-dom": "19.0.0",
    "size-limit": "7.0.8",
    "prettier": "3.2.5",
    "terser": "5.30.3 ",
    "tsup": "8.4.0",
    "typescript": "5.7.3",
    "vitest": "3.0.7"
  }
}
